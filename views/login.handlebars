<div class="container">
  <form class="login-form width-40 pt-5 input-form">
    <h2 class="h4 text-center">Login</h2>
    <div class="my-3">
      <label for="username" class="form-label">Username</label>
      <input type="text" class="form-control" name="username" id="username" required/>
    </div>
    <div class="my-3" >
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" name="password" id="password" required/>
    </div>
    
    <div class="text-center my-3">
      <button class="btn btn-primary p-2 submit-login" type="submit">Login</button>
    </div>
  </form>
   <div class="modal fade b-shadow-1 f" id="login-message-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Authentication Message</h5>
        </div>
        <div class="modal-body" id="login-modal-body">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src='./js/login.js'></script>